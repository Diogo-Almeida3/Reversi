<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReversiAmovTP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_marinho</item>
        <item name="colorPrimaryVariant">@color/mantra</item>
        <item name="colorOnPrimary">@color/ar_puro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/chao_batido</item>
        <item name="colorSecondaryVariant">@color/creme_canela</item>
        <item name="colorOnSecondary">@color/azul_marinho</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/dmsans</item>
    </style>

    <style name="ButtonMenu" parent="android:Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:paddingRight">60dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonMenuLand" parent="android:Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:paddingRight">60dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">37dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditTextLogin">
        <item name="backgroundColor">@color/branco</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">@color/azul_marinho</item>
        <item name="android:backgroundTint">@color/branco</item>
        <item name="drawableTint">@color/azul_marinho</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="textFillColor">@color/azul_marinho</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="rulesText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="rulesTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/creme_canela</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="titleReversi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">65sp</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NavigationViewStyleTitle">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="NavigationViewStyleTextIcon">
        <item name="android:textSize">18sp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
    </style>


    <style name="profileButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="profileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="profileItems">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="navView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/ar_puro</item>
        <item name="android:itemTextAppearance">@style/NavigationViewStyleTextIcon</item>
        <item name="menu">@menu/nav_menu</item>
        <item name="theme">@style/NavigationViewStyleTitle</item>
    </style>
</resources>