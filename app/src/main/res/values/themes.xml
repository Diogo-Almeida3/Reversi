<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReversiAmovTP" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_marinho</item>
        <item name="colorPrimaryVariant">@color/mantra</item>
        <item name="colorOnPrimary">@color/ar_puro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/chao_batido</item>
        <item name="colorSecondaryVariant">@color/creme_canela</item>
        <item name="colorOnSecondary">@color/azul_marinho</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/zilla</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ButtonMenu" parent="android:Widget.Material.Button">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="ButtonMenuLand" parent="android:Widget.Material.Button">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="EditTextLogin">
        <item name="backgroundColor">@color/branco</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">@color/azul_marinho</item>
        <item name="android:backgroundTint">@color/branco</item>
        <item name="drawableTint">@color/azul_marinho</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="textFillColor">@color/azul_marinho</item>
        <item name="android:drawablePadding">15dp</item>
    </style>
</resources>