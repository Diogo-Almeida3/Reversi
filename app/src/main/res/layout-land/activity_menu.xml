<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MenuActivity"
    android:background="@drawable/custom_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:textStyle="bold"
                android:textSize="85sp"
                android:textColor="@color/branco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reversi"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="125dp"
                android:maxWidth="125dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_reversi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center">

            <Button
                android:id="@+id/btnModo1"
                style="@style/ButtonMenuLand"
                android:text="@string/twoPlayersOff"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_group"/>

            <Button
                android:id="@+id/btnModo2"
                style="@style/ButtonMenuLand"
                android:text="@string/twoPlayersOn"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_group"/>

            <Button
                android:id="@+id/btnModo3"
                style="@style/ButtonMenuLand"
                android:text="@string/threePlayersOn"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_group3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginVertical="30dp"
                android:layout_gravity="center_horizontal">


                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btnRegras"
                    android:text="@string/rules"
                    android:paddingLeft="20dp"
                    android:textSize="24sp"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@android:drawable/ic_dialog_info"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/branco"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btnExit"
                    android:text="@string/exit"
                    android:paddingLeft="20dp"
                    android:paddingRight="35dp"
                    android:textSize="24sp"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@drawable/ic_exit"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/branco"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>