<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".activities.MenuActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/titleReversi"
                android:text="@string/reversi" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo_reversi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <Button
                android:id="@+id/btnModo1"
                style="@style/ButtonMenu"
                android:drawableLeft="@drawable/ic_group"
                android:paddingLeft="20dp"
                android:text="@string/twoPlayersOff" />

            <Button
                android:id="@+id/btnModo2"
                style="@style/ButtonMenu"
                android:drawableLeft="@drawable/ic_group"
                android:paddingLeft="20dp"
                android:text="@string/twoPlayersOn" />

            <Button
                android:id="@+id/btnModo3"
                style="@style/ButtonMenu"
                android:drawableLeft="@drawable/ic_group3"
                android:paddingLeft="20dp"
                android:text="@string/threePlayersOn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnRegras"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@android:drawable/ic_dialog_info"
                    android:paddingLeft="20dp"
                    android:text="@string/rules"
                    android:textColor="@color/branco"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnExit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@drawable/ic_exit"
                    android:paddingLeft="20dp"
                    android:paddingRight="35dp"
                    android:text="@string/exit"
                    android:textColor="@color/branco"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemTextAppearance="@style/NavigationViewStyleTextIcon"
        app:theme="@style/NavigationViewStyleTitle"/>
</androidx.drawerlayout.widget.DrawerLayout>